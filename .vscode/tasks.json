{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üé® Format Project",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "format"],
      "group": "build",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "statusbar": { "label": "Format" },
        "env": { "PATH": "${env:HOME}/.asdf/shims:${env:PATH}" }
      }
    },
    {
      "label": "üßπ Lint Project",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint"],
      "group": "build",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "statusbar": { "label": "Lint" },
        "env": { "PATH": "${env:HOME}/.asdf/shims:${env:PATH}" }
      }
    },
    {
      "label": "üõ†Ô∏è Lint Fix Project",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint:fix"],
      "group": "build",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "statusbar": { "label": "Lint Fix" },
        "env": { "PATH": "${env:HOME}/.asdf/shims:${env:PATH}" }
      }
    },
    {
      "label": "üèóÔ∏è Build Project",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build"],
      "group": "build",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "statusbar": { "label": "Build" },
        "env": { "PATH": "${env:HOME}/.asdf/shims:${env:PATH}" }
      }
    },
    {
      "label": "üöÄ Start Environment (uses NODE_ENV)",
      "type": "shell",
      "command": "./start.sh",
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": {
        "owner": "docker",
        "pattern": {
          "regexp": "^(ERRO|ERROR):\\s*(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "CONFIGURANDO MODO",
          "endsPattern": "Server listening at|Servidor Fastify rodando"
        }
      },
      "options": {
        "statusbar": { "label": "Start" },
        "env": { "PATH": "${env:HOME}/.asdf/shims:${env:PATH}" }
      }
    },
    {
      "label": "üî• Reset Docker Environment",
      "type": "shell",
      "command": "./reset.sh",
      "group": "test",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "options": {
        "statusbar": { "label": "Reset" },
        "env": { "PATH": "${env:HOME}/.asdf/shims:${env:PATH}" }
      }
    }
  ]
}
