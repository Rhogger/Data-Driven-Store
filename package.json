{
  "name": "data-driven-store",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf dist || sudo rm -rf dist",
    "build": "bash ./build.sh",
    "start": "node dist/index.js",
    "dev:watch": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/index.ts",
    "dev:ts": "ts-node -r tsconfig-paths/register src/index.ts",
    "reset": "./reset.sh",
    "copy:assets": "copyfiles --up 1 \"src/**/*.{sql,cql,cypher,json}\" dist",
    "dev": "pnpm run build && pnpm run start",
    "lint": "eslint \"{src,db}/**/*.ts\" --max-warnings 0",
    "lint:fix": "eslint \"{src,db}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\" \"*.{js,json,md}\"",
    "check-format": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed:all": "node dist/src/seeders/seed-all.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tsconfig/node24": "^24.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.10",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "fs-extra": "^11.3.0",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "cassandra-driver": "^4.8.0",
    "dotenv": "^17.0.1",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.6.1",
    "mongodb": "^6.17.0",
    "neo4j-driver": "^5.28.1",
    "pg": "^8.16.3",
    "tsconfig-paths": "^4.2.0"
  }
}
