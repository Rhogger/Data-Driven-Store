{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ðŸŽ¨ Format Project",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "format"],
      "group": "build",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "statusbar": {
          "label": "Format"
        }
      }
    },
    {
      "label": "ðŸš€ Start Development Environment (Hot Reload)",
      "type": "shell",
      "command": "./start.sh",
      "args": ["dev"],
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": {
        "owner": "docker",
        "pattern": {
          "regexp": "^(ERRO|ERROR):\\s*(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "--- Iniciando ambiente Docker em modo DESENVOLVIMENTO",
          "endsPattern": "Server listening at"
        }
      },
      "options": {
        "statusbar": {
          "label": "Start"
        }
      }
    },
    {
      "label": "ðŸ”¥ Reset Docker Environment",
      "type": "shell",
      "command": "./reset.sh",
      "group": "test",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "options": {
        "statusbar": {
          "label": "Reset"
        }
      }
    }
  ]
}
