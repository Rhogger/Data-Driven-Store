{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🏗️ Build Project",
      "type": "shell",
      "command": "./build.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"],
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "🚀 Start Docker Environment",
      "type": "shell",
      "command": "./start.sh",
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": {
        "owner": "docker",
        "pattern": {
          "regexp": "^(ERRO|ERROR):\\s*(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "--- Iniciando ambiente de desenvolvimento Docker ---",
          "endsPattern": "Server listening at"
        }
      }
    },
    {
      "label": "🔥 Reset Docker Environment",
      "type": "shell",
      "command": "./reset.sh",
      "group": "test",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "options": {
        "statusbar": {
          "label": "Reset Docker"
        }
      }
    },
    {
      "label": "🎨 Format Project",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "format"],
      "group": "build",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
