{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noEmit": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["./config/*"],
      "@plugins/*": ["./plugins/*"],
      "@repositories/*": ["./repositories/*"],
      "@routes/*": ["./routes/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.sql"],
  "exclude": ["node_modules", "dist"]
}
