{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üèóÔ∏è Build Project",
      "type": "shell",
      "command": "./build.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"],
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "üöÄ Start Docker Environment (Production)",
      "type": "shell",
      "command": "./start.sh",
      "args": ["production"],
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": {
        "owner": "docker",
        "pattern": {
          "regexp": "^(ERRO|ERROR):\\s*(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "--- Iniciando ambiente Docker em modo PRODU√á√ÉO",
          "endsPattern": "Server listening at"
        }
      },
      "options": {
        "statusbar": {
          "label": "Start Production"
        }
      }
    },
    {
      "label": "üî• Start Docker Environment (Development - Hot Reload)",
      "type": "shell",
      "command": "./start.sh",
      "args": ["dev"],
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": {
        "owner": "docker",
        "pattern": {
          "regexp": "^(ERRO|ERROR):\\s*(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "--- Iniciando ambiente Docker em modo DESENVOLVIMENTO",
          "endsPattern": "Server listening at"
        }
      },
      "options": {
        "statusbar": {
          "label": "Start Dev Mode"
        }
      }
    },
    {
      "label": "üî• Reset Docker Environment",
      "type": "shell",
      "command": "./reset.sh",
      "group": "test",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
      },
      "options": {
        "statusbar": {
          "label": "Reset Docker"
        }
      }
    },
    {
      "label": "üé® Format Project",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "format"],
      "group": "build",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "üî• Start Development Environment (Hot Reload)",
