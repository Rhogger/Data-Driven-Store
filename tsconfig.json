{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true, 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.sql"
  ],
  "exclude": ["node_modules", "dist"]
}